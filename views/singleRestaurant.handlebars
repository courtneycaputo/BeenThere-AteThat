<div class="row">
    <div class="col s4">
      <div class="card light-blue accent-1">
        <div class="card-content black-text">
          <span class="card-title">{{restaurant.name}}</span>
          <p>Location: {{restaurant.location}}</p>
        </div>
        <input type="hidden" name="restaurant-id" id="restaurant-id" value="{{restaurant.id}}"/>
{{#if loggedIn}}
<div class="card">
  <div class="card-header"></div>
  <form class="card-body" id="new-comment-form">
    
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn">Submit:</button>
  </form>
{{!-- {{>comment restaurant.comments}} --}}
{{#each restaurant.comments as |comment|}}
<p>{{comment.comment}} posted on {{format_date createdAt}}</p>
{{/each}}
</div>
{{/if}}
<script src="/js/comment.js"></script>
      </div>
